{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    {
      "identifier": "fs:allow-exists",
      "writeFile": true,
      "writeBinaryFile": true,
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/**/*" },
        { "path": "$HOME/Rust Veil" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "writeFile": true,
      "writeBinaryFile": true,
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/**/*" },
        { "path": "$HOME/Rust Veil" }
      ]
    }
  ]
}
