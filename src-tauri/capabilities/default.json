{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
  
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "opener:default",
    "log:default",
    "store:default",
    "sql:default",
    "upload:default",
    "http:default",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "dialog:allow-message",
    "dialog:allow-save",
    "dialog:allow-open",
    "sql:allow-close",
    "sql:allow-execute",
    "sql:allow-load",
    "sql:allow-select"
  ]
}